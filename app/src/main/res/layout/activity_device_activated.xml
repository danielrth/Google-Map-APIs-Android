<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/visuel_fond_log">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/visuel_fond_log"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/picto_ok_vert"
            android:padding="10dp" />

        <TextView
            android:id="@+id/main_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Votre Beepings ZEN a bien été détecté"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/light"
            android:textStyle="bold|normal" />

        <Button
            android:id="@+id/continueButtonZen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_rectangle_sky"
            android:text="CONTINUER"
            android:textColor="@color/light"
            android:textStyle="bold|normal" />

    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/black_transparent"
        android:theme="@style/ThemeToolbar"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
</RelativeLayout>