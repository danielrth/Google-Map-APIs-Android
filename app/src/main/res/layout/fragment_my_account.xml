<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/color_menu">

        <ImageView
            android:id="@+id/img_add_account"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/btn_add_photo_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_photo_nouv" />

        <TextView
            android:id="@+id/txt_click_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_add_photo_account"
            android:layout_centerHorizontal="true"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Cliquez ici
pour ajouter une photo"
            android:textColor="@color/light"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/firstLayout"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="Nom"
                android:textColor="@color/dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/first_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="Justine" />

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/firstLayout"
            android:layout_margin="2dp"
            android:background="@color/wallet_hint_foreground_holo_light" />

        <LinearLayout
            android:id="@+id/firstOneLayout"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="Prénom"
                android:textColor="@color/dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/last_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="Deleport" />

        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/firstOneLayout"
            android:layout_margin="2dp"
            android:background="@color/wallet_hint_foreground_holo_light" />

        <LinearLayout
            android:id="@+id/secondLayout"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="Date de naissance"
                android:textColor="@color/dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/birthday"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="03/02/1991" />

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/secondLayout"
            android:layout_margin="2dp"
            android:background="@color/wallet_hint_foreground_holo_light" />

        <LinearLayout
            android:id="@+id/thirdLayout"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="Email"
                android:textColor="@color/dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/email_login_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="justine.deleport@gmail.com" />

        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/thirdLayout"
            android:layout_margin="2dp"
            android:background="@color/wallet_hint_foreground_holo_light" />

        <LinearLayout
            android:id="@+id/fourthLayout"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="Téléphone"
                android:textColor="@color/dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/mobile"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="01 34 56 77 77" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>